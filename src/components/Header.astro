---
import MobileMenu from "./MobileMenu.astro";
---

<header class="bg-teal-200 p-4">
  <div class="max-w-screen-xl mx-auto flex items-center justify-between">
    <div class="text-lg font-semibold">Wellness Medical Center</div>
    <nav class="hidden md:flex gap-6">
      <a href="/" class="hover:underline">Home</a>
      <a href="/about" class="hover:underline">About Us</a>
      <a href="/shop" class="hover:underline">Wellness Shop</a>
      <a href="/blog" class="hover:underline">Health Tips</a>
    </nav>
    <button
      id="menuToggle"
      class="md:hidden flex items-center gap-2 p-2 border rounded"
      aria-label="Toggle Menu"
    >
      <span class="text-xl">â˜°</span>
      <span class="text-sm font-medium">Menu</span>
    </button>
  </div>
  <MobileMenu />
  <script>
    const toggle = document.getElementById("menuToggle");
    const menu = document.getElementById("mobileMenu");

    toggle?.addEventListener("click", () => {
      menu?.classList.toggle("hidden");
    });
  </script>
</header>
