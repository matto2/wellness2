---
import MobileMenu from "./MobileMenu.astro";
---

<header>
  <div class="flex items-center justify-between py-2">
    <a href="/" class="flex items-center space-x-2">
      <img
        src="/logo2.svg"
        alt="logo"
        class="w-10 h-10 md:w-14 md:h-14 text-brand-primary"
      />
      <h1 class="text-lg sm:text-xl md:text-2xl font-semibold text-amber-700">
        Wellness Medical Center
      </h1>
    </a>

    <nav class="hidden md:flex gap-6">
      <a href="/" class="hover:underline">Home</a>
      <a href="/about" class="hover:underline">About Us</a>
      <a href="/shop" class="hover:underline">Wellness Shop</a>
      <a href="/blog" class="hover:underline">Health Tips</a>
    </nav>
    <button
      id="menuToggle"
      class="md:hidden flex items-center gap-2 p-2 border rounded"
      aria-label="Toggle Menu"
    >
      <span class="text-xl">â˜°</span>
      <span class="text-sm font-medium">Menu</span>
    </button>
  </div>
  <MobileMenu />
  <script>
    const toggle = document.getElementById("menuToggle");
    const menu = document.getElementById("mobileMenu");

    toggle?.addEventListener("click", () => {
      menu?.classList.toggle("hidden");
    });
  </script>
</header>
