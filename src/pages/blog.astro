---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import type { ImageMetadata } from "astro";
import abdomenImage from "../assets/abdomen-8762847_1280.jpg";
import LotusIcon from "../components/LotusIcon.astro";

// Create an image map
const imageMap = {
  "abdomen-8762847_1280.jpg": abdomenImage,
} as const;

const posts = await getCollection("blog");
---

<Layout title="Health Tips | Wellness Medical Center">
  <div class="max-w-screen-xl mx-auto px-4 mt-20 xl:px-0">
    <div class="flex justify-center mb-4">
      <LotusIcon class="w-24 h-24" />
    </div>
    <h1 class="text-4xl text-amber-700 font-medium mb-12 text-center">
      Health Tips
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        posts.map((post) => (
          <article class="bg-white rounded-[24px] shadow-md overflow-hidden">
            {post.data.image && (
              <a href={`/blog/${post.slug}`} class="block">
                <div class="aspect-[16/9] overflow-hidden">
                  <Image
                    src={imageMap[post.data.image as keyof typeof imageMap]}
                    alt={post.data.title}
                    class="w-full h-full object-cover"
                    width={600}
                    height={338}
                  />
                </div>
              </a>
            )}
            <div class="p-4">
              <h2 class="text-xl font-medium text-amber-700 mb-2">
                <a href={`/blog/${post.slug}`} class="hover:text-amber-800">
                  {post.data.title}
                </a>
              </h2>
              <div class="flex items-center gap-2 text-gray-600 mb-3 text-sm">
                <span>{post.data.author}</span>
                <span>â€¢</span>
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>
              </div>
              {post.data.description && (
                <p class="text-gray-700 mb-3 text-sm">
                  {post.data.description}
                </p>
              )}
              <a
                href={`/blog/${post.slug}`}
                class="inline-flex items-center text-amber-700 hover:text-amber-800 font-medium text-sm"
              >
                Read more
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-4 w-4 ml-2"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</Layout>
