---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Image from "astro/components/Image.astro";
import circles from "../assets/circles.svg";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body
    class="relative text-gray-800 min-h-screen flex flex-col overflow-x-hidden"
  >
    <!-- Hero Background (layout-only) -->
    <div
      class="absolute top-[80px] left-0 w-full h-[633px] -z-10 overflow-hidden pointer-events-none"
    >
      <Image
        src={circles}
        alt=""
        class="w-full h-full object-cover opacity-77"
      />
    </div>

    <div class="w-full px-4 md:px-8 flex-1 flex flex-col">
      <div class="max-w-screen-xl mx-auto flex-1 flex flex-col w-full">
        <Header />
        <main class="flex-1 w-full pb-8">
          <slot />
        </main>
      </div>
    </div>
    <div class="w-full bg-[#99a88c] mt-8">
      <div class="max-w-screen-xl mx-auto px-4 md:px-8">
        <Footer />
      </div>
    </div>
  </body>
</html>
