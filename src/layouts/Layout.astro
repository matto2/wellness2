---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Bg from "../components/Bg.astro"; // <- moved from /assets
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Wellness Medical Center</title>
  </head>
  <body
    class="relative text-gray-800 bg-white min-h-screen flex flex-col overflow-x-hidden"
  >
    <!-- Hero Background (layout-only) -->
    <div
      class="absolute top-0 left-0 w-full h-[600px] -z-10 overflow-hidden pointer-events-none"
    >
      <!-- <Bg class="w-full h-full" /> -->
    </div>

    <div class="w-full px-4 md:px-8 flex-1 flex flex-col">
      <div class="max-w-screen-xl mx-auto flex-1 flex flex-col">
        <Header />
        <main class="flex-1">
          <slot />
        </main>
      </div>
    </div>
    <div class="w-full bg-pink-200">
      <div class="max-w-screen-xl mx-auto px-4 md:px-8">
        <Footer />
      </div>
    </div>
  </body>
</html>
